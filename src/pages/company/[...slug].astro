---
import Layout from '../../layouts/Layout.astro';
import { ArrowLeft } from 'lucide-react';

export function getStaticPaths() {
  return [
    { params: { slug: 'careers' } }
  ];
}

const { slug } = Astro.params;
const title = slug?.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
---

<Layout title={`${title} - AdaptiveParse`}>
  <main class="min-h-[60vh]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <a href="/" class="inline-flex items-center text-gray-400 hover:text-brand-orange mb-8">
        <ArrowLeft className="w-4 h-4 mr-2" />
        Back to Home
      </a>

      <div class="bg-dark-100/50 rounded-xl p-8 border border-dark-50/10">
        <h1 class="text-4xl font-display font-bold text-white mb-4">
          {title}
        </h1>
        <p class="text-gray-400">
          This page is currently under construction. Please check back soon for updates about our {title.toLowerCase()} opportunities.
        </p>
      </div>
    </div>
  </main>
</Layout>