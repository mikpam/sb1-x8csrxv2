---
import Layout from '../layouts/Layout.astro';
import { Mail, MapPin, Phone, MessageSquare } from 'lucide-react';
import ContactForm from '../components/ContactForm';

const contactInfo = [
  {
    icon: Phone,
    title: "Phone",
    details: "+1 (555) 123-4567",
    link: "tel:+15551234567"
  },
  {
    icon: Mail,
    title: "Email",
    details: "contact@adaptiveparse.com",
    link: "mailto:contact@adaptiveparse.com"
  },
  {
    icon: MapPin,
    title: "Office",
    details: "310 S Grand Ave. STE 306, Glendora, CA 91741 USA",
    link: "https://maps.google.com/maps?q=310+S+Grand+Ave+STE+306+Glendora+CA+91741+USA"
  }
];
---

<Layout title="Contact Us - AdaptiveParse">
  <main>
    <div class="bg-gradient-to-b from-dark-300 to-dark-200 pt-16 pb-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h1 class="text-5xl font-display font-bold text-white mb-6">
            Get in Touch
          </h1>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Have questions about AdaptiveParse? We're here to help.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          {/* Contact Form */}
          <div class="bg-dark-100/50 p-8 rounded-xl border border-dark-50/10 shadow-lg">
            <h2 class="text-2xl font-display font-semibold text-white mb-6">Send us a Message</h2>
            <ContactForm client:load />
          </div>

          {/* Contact Information */}
          <div class="space-y-8">
            {contactInfo.map(item => (
              <div class="bg-dark-100/50 p-6 rounded-xl border border-dark-50/10 shadow-lg">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-brand-orange/10 rounded-lg flex items-center justify-center">
                      <item.icon className="w-6 h-6 text-brand-orange" />
                    </div>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-display font-semibold text-white mb-1">{item.title}</h3>
                    <a 
                      href={item.link}
                      class="text-gray-400 hover:text-brand-orange transition-colors"
                    >
                      {item.details}
                    </a>
                  </div>
                </div>
              </div>
            ))}

            {/* Map */}
            <div class="bg-dark-100/50 p-6 rounded-xl border border-dark-50/10 shadow-lg">
              <div class="aspect-w-16 aspect-h-9">
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3305.7153803654787!2d-117.86690548478827!3d34.13001998058611!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c32c6c0b597f27%3A0x5b8f6a1e7b6f1b0a!2s310%20S%20Grand%20Ave%20%23306%2C%20Glendora%2C%20CA%2091741!5e0!3m2!1sen!2sus!4v1647893577273!5m2!1sen!2sus"
                  width="100%"
                  height="100%"
                  style="border:0;"
                  allowfullscreen=""
                  loading="lazy"
                  class="rounded-lg"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>